function GetShortUrl(sFullUrl) {
    var sShortUrl = "";
    var _data = "{ action:'" + "GetShortUrl"
                    + "',ShareUrl:'" + sFullUrl + "'}";
    $.ajax({
        type: "POST",
        url: '../AjaxPages/prdShareAjax.aspx',
        data: _data,
        async: false,
        dataType: "text",
        success: function (response) {
            sShortUrl = response;
            return;
        }
    });
    return sShortUrl;
}
