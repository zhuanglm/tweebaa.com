}


var eamil = "";
$(document).ready(
function load() {
    if ($("#labEmail") != null) {
        var Request = new Object();
        Request = GetRequest();
        eamil = Request["id"];
        if (eamil == null || eamil == "") {
            return;
        }
        $("#labEmail").text(eamil);
        $("#hrefEmail").attr("href", "mailto:" + eamil);
    }

});

