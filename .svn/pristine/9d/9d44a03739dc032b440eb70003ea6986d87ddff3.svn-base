		/// <summary>
		/// 得到一个对象实体
		/// </summary>
		public Twee.Model.District GetModel(int Id)
		{
			
			StringBuilder strSql=new StringBuilder();
			strSql.Append("select  top 1 Id,DisName,CityID,DisSort from wn_District ");
			strSql.Append(" where Id=@Id");
			SqlParameter[] parameters = {
					new SqlParameter("@Id", SqlDbType.Int,4)
			};
			parameters[0].Value = Id;

			Twee.Model.District model=new Twee.Model.District();
			DataSet ds=DbHelperSQL.Query(strSql.ToString(),parameters);
			if(ds.Tables[0].Rows.Count>0)
			{
				return DataRowToModel(ds.Tables[0].Rows[0]);
			}
			else
			{
				return null;
			}
		}


		/// <summary>
		/// 得到一个对象实体
		/// </summary>
		public Twee.Model.District DataRowToModel(DataRow row)
		{
			Twee.Model.District model=new Twee.Model.District();
			if (row != null)
			{
				if(row["Id"]!=null && row["Id"].ToString()!="")
				{
					model.Id=int.Parse(row["Id"].ToString());
				}
				if(row["DisName"]!=null)
				{
					model.DisName=row["DisName"].ToString();
				}
				if(row["CityID"]!=null && row["CityID"].ToString()!="")
				{
					model.CityID=int.Parse(row["CityID"].ToString());
				}
				if(row["DisSort"]!=null && row["DisSort"].ToString()!="")
				{
					model.DisSort=int.Parse(row["DisSort"].ToString());
				}
			}
			return model;
		}

