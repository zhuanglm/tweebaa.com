		public int Add(Twee.Model.District model)
		{
			StringBuilder strSql=new StringBuilder();
			strSql.Append("insert into wn_District(");
			strSql.Append("DisName,CityID,DisSort)");
			strSql.Append(" values (");
			strSql.Append("@DisName,@CityID,@DisSort)");
			strSql.Append(";select @@IDENTITY");
			SqlParameter[] parameters = {
					new SqlParameter("@DisName", SqlDbType.NVarChar,30),
					new SqlParameter("@CityID", SqlDbType.Int,4),
					new SqlParameter("@DisSort", SqlDbType.Int,4)};
			parameters[0].Value = model.DisName;
			parameters[1].Value = model.CityID;
			parameters[2].Value = model.DisSort;

			object obj = DbHelperSQL.GetSingle(strSql.ToString(),parameters);
			if (obj == null)
			{
				return 0;
			}
			else
			{
				return Convert.ToInt32(obj);
			}
		}
